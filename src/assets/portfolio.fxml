<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<GridPane alignment="TOP_CENTER" hgap="10" vgap="10"
          maxWidth="Infinity"
          fx:controller="FPTS.Controllers.PortfolioController"
          xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="25" right="25" left="25" bottom="10"/></padding>
    <Text fx:id="portfolioName" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="Simulate Portfolio" onAction="#handleSimulate" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Watch List" onAction="#handleWatchList" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
    <Button fx:id="logout" text="Log Out" onAction="#handlelLogOut" GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="80"/>

    <Separator GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="5"></Separator>

    <Label text="Holdings" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="holdings-header"/>
    <Button text="Export Holdings" onAction="#handleExportAction" GridPane.rowIndex="2" GridPane.columnIndex="1" alignment="CENTER_RIGHT"/>
    <Button text="Add Holding" onAction="#handleNewHolding" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    <Button text="Import Holdings" onAction="#handleImport" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

    <TableView fx:id="holdingsPane" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="5" GridPane.hgrow="ALWAYS" prefHeight="350">
        <!--<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>-->
        <columns>
            <TableColumn text="Type" prefWidth="125">
                <cellValueFactory><PropertyValueFactory property="type" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Name" prefWidth="285">
                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Value (USD)" prefWidth="135">
                <cellValueFactory><PropertyValueFactory property="value" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Shares" prefWidth="135">
                <cellValueFactory><PropertyValueFactory property="shares"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="holdingActionColumn" text="Action" prefWidth="65">

            </TableColumn>
        </columns>
        <items>

        </items>
    </TableView>

    <Text fx:id="transactionLogHeading" text="Transactions" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Button text="Undo" onAction="#handleUndo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button text="Redo" onAction="#handleRedo" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
    <Button text="New Transaction" onAction="#handleTransaction" GridPane.rowIndex="5" GridPane.columnIndex="3"/>

    <TableView fx:id="transactionLogPane" GridPane.rowIndex="6" GridPane.columnIndex="0" prefHeight="250" GridPane.hgrow="ALWAYS" GridPane.columnSpan="5">
        <columns>
            <TableColumn text="Date" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="dateTime"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Transaction" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="description"/></cellValueFactory>
            </TableColumn>
            <TableColumn text="Status" prefWidth="200">
                <cellValueFactory><PropertyValueFactory property="status"/></cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Text fx:id="errorMessage" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <stylesheets>
        <URL value="@styles/portfolio.css" />
    </stylesheets>
</GridPane>