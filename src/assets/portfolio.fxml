<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<GridPane alignment="center" hgap="10" vgap="10"
          maxWidth="Infinity"
          fx:controller="FPTS.Controllers.PortfolioController"
          xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="25" right="25" left="25" bottom="10"/></padding>
    <Text fx:id="portfolioName" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.columnSpan="5"/>

    <Label text="Holdings" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="holdings-header" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS"/>
    <Button text="Export" onAction="#handleExportAction" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button text="Add Holding" onAction="#handleNewHolding" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Button text="Import Holdings" onAction="#handleImport" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    <Button text="New Transaction" onAction="#handleTransaction" GridPane.columnIndex="4" GridPane.rowIndex="1"/>

    <TableView fx:id="holdingsPane" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="5" GridPane.hgrow="ALWAYS">
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        <columns>
            <TableColumn text="Type" prefWidth="30.0">
                <cellValueFactory><PropertyValueFactory property="type" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Name" prefWidth="60.0">
                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Value (USD)" prefWidth="30.0">
                <cellValueFactory><PropertyValueFactory property="value" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Shares" prefWidth="30.0">
                <cellValueFactory><PropertyValueFactory property="shares"/></cellValueFactory>
            </TableColumn>
        </columns>
        <items>

        </items>
    </TableView>

    <stylesheets>
        <URL value="@styles/portfolio.css" />
    </stylesheets>
</GridPane>