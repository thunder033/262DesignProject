<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import FPTS.Controls.*?>
<?import javafx.scene.text.Text?>
<?import FPTS.Controls.*?>
<VBox alignment="TOP_CENTER"
      fx:controller="FPTS.Controllers.TransactionController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <Label>
        <padding>
            <Insets top="25" right="0" bottom="10" left="0"/>
        </padding>
        Make A Transaction
    </Label>

    <Label text="Source Holding" />
    <ChoiceBox fx:id="holdingTypes" maxWidth="200" />
    <HBox alignment="CENTER">
        <Button fx:id="searchButton1Transaction" onAction="#handleSearch">
            New Equity
        </Button>
    </HBox>

    <HBox alignment="CENTER">
        <TextField fx:id="sharePriceField1" promptText="Share Amount"></TextField>
        <Text fx:id="holdingInfo1"/>
    </HBox>

    <HBox alignment="CENTER">
        <padding>
            <Insets top="10" right="0" bottom="10" left="0"/>
        </padding>
        <NumericField fx:id="transactionAmount" minWidth="200" promptText="The transaction amount"/>
    </HBox>

    <Label text="Destination Holding" />
    <ChoiceBox fx:id="holdingTypes2" maxWidth="200" />
    <HBox alignment="CENTER">
        <Button fx:id="searchButton2Transaction" onAction="#handleSearch">
            New Equity
        </Button>
    </HBox>

    <HBox alignment="CENTER">
        <TextField fx:id="sharePriceField2" promptText="Share Amount"></TextField>
    </HBox>

    <HBox alignment="CENTER">
        <padding>
            <Insets top="10" right="0" bottom="0" left="0"/>
        </padding>
    <DatePicker fx:id="transactionDate" promptText="Date of transaction" maxWidth="200"></DatePicker>
    </HBox>

    <Text fx:id="errorMessage"/>

    <Button fx:id="transactionControl" onAction="#makeTransaction"> Make Transaction </Button>
</VBox>