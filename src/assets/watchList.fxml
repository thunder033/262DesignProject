<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import FPTS.Controls.*?>
<GridPane alignment="TOP_CENTER" hgap="10" vgap="10"
          maxWidth="Infinity"
          fx:controller="FPTS.Controllers.WatchListController"
          xmlns:fx="http://javafx.com/fxml">
    <padding><Insets top="25" right="25" left="25" bottom="10"/></padding>
    <Text fx:id="portfolioName" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4"/>

    <NumericField fx:id="minutesInterval" maxWidth="100" promptText="Minutes" GridPane.rowIndex="1" GridPane.columnIndex="1"></NumericField>
    <Text text=":" GridPane.rowIndex="1" GridPane.columnIndex="2"></Text>
    <NumericField fx:id="secondsInterval" maxWidth="100" promptText="Seconds" GridPane.rowIndex="1" GridPane.columnIndex="3"></NumericField>

    <Button fx:id="setTimer" text="Set Update Interval" onAction="#handleTimer" GridPane.rowIndex="1" GridPane.columnIndex="4" prefWidth="150"/>

    <Label text="Watched Holdings" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="holdings-header" GridPane.columnSpan="1"/>

    <TableView fx:id="holdingsPane" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="5" GridPane.hgrow="ALWAYS" prefHeight="350">
        <!--<columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>-->
        <columns>
            <TableColumn text="Type" prefWidth="125">
                <cellValueFactory><PropertyValueFactory property="type" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Name" prefWidth="285">
                <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Value (USD)" prefWidth="135">
                <cellValueFactory><PropertyValueFactory property="value" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Shares" prefWidth="135">
                <cellValueFactory><PropertyValueFactory property="shares"/></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="holdingActionColumn" text="Action" prefWidth="65">

            </TableColumn>
        </columns>
        <items>

        </items>
    </TableView>

    <stylesheets>
        <URL value="@styles/portfolio.css" />
    </stylesheets>
</GridPane>