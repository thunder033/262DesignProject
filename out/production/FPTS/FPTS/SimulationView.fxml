<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="FPTS.SimulationCtrl" prefHeight="Infinity" prefWidth="Infinity"
          gridLinesVisible="true"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">

    <Text text="Simulation Page"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Value: "
           GridPane.columnIndex="3" GridPane.rowIndex="5"/>

    <Label text=""
           GridPane.columnIndex="4" GridPane.rowIndex="5" fx:id="value"/>

    <Button text="Bull Simulation" GridPane.columnIndex="3" GridPane.rowIndex="7"
            onAction="#simulateClicked"/>
</GridPane>